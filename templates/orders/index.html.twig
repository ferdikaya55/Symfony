{% extends 'frontbase.html.twig' %}

{% block title %}Shopcart Order Items{% endblock %}
{% block sidebar %} {% include ('home/_usersidebar.html.twig') %} {% endblock %}
{% block content %}
<div class="span9">
<ul class="breadcrumb">
    <li><a href="{{ path('home') }}">Anasayfa</a> <span class="divider">/</span></li>
    <li><a href="#">Shopcart Items</a> <span class="divider">/</span></li>
    <li class="active">Ürün Detayı</li>
</ul>
<div class="row">

    <div class="span3">
        <h5>Shopcart Items </h5>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Amount</th>
                <th>City</th>
                <th>Phone</th>
                <th>Date</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.name }}</td>
                <td>{{ order.amount }} TL</td>
                <td>{{ order.city }}</td>
                <td>{{ order.phone }}</td>
                <td>{{ order.createdat }}</td>
                <td>{{ order.status }}</td>
                <td>
                    <a href="{{ path('orders_show', {'id': order.id}) }}"><b>show</b></a>
                    <a href="{{ path('orders_edit', {'id': order.id}) }}"><b>edit</b></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('orders_new') }}">Create new</a>
    </div>
</div>



{% endblock %}
