{% extends 'frontbase.html.twig' %}

{% block title %} Shopcart {% endblock %}

{% block sidebar %} {% include ('home/_usersidebar.html.twig') %} {% endblock %}
{% block content %}

<div class="span9">
<ul class="breadcrumb">
    <li><a href="{{ path('home') }}">Anasayfa</a> <span class="divider">/</span></li>
    <li><a href="#">Order Details</a> <span class="divider">/</span></li>
    <li class="active">Ürün Detayı</li>
</ul>
<div class="row">

    <div class="span3">
        <h5>Order Details </h5>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ order.userid }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ order.amount }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ order.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ order.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ order.city }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ order.phone }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ order.info }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ order.status }}</td>
            </tr>

        </tbody>
    </table>
        <table class="table">

            <thead>
            <tr>
                <th>Id</th>
                <th>ProductName</th>
                <th>SalePrice</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Status</th>
            </tr>
            </thead>
            <tbody>
            {% set total=0 %}
            {% for rs in orderdetail %}
                <tr>
                    <td>{{ rs.id }}</td>
                    <td>{{ rs.name }}</td>
                    <td>{{ rs.price }}</td>
                    <td>{{ rs.quantity }}</td>
                    <td>{{ rs.amount }}</td>
                    <td>{{ rs.status }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Order Detail</td>
                </tr>
            {% endfor %}
            <tr>
                <td colspan="5">Toplam Alışveriş Tutarı : {{ order.amount }} TL<b></b><br>
                </td>
            </tr>

            </tbody>
        </table>
    </div>
</div>


{% endblock %}

