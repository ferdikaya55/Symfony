{% for label, flashes in app.session.flashbag.all %}
    {% for flash in flashes %}
        {% if (label == 'success' )  %}
            <div class="panel panel-success">
                <div class="panel-heading">
                    Success Panel !!!
                </div>
            </div>{{ flash }}
        {% elseif (label == 'error' ) %}
            <div class="alert alert-danger">
                    <strong>Error!</strong> {{ flash }}
            </div>
        {% elseif (label == 'info' ) %}
            <div class="alert alert-danger">
                <strong>Error!</strong> {{ flash }}
            </div>

            {% elseif (label == 'warning' ) %}
                <div class="alert alert-danger">
                    <strong>Error!</strong> {{ flash }}
                </div>
        {% endif %}
    {% endfor %}
{% endfor %}