{% extends 'adminbase.html.twig' %}

{% block title %}Üye Düzenleme {% endblock %}

{% block content %}
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="page-head-line">Üye Düzenleme</h2>
                </div>
            </div>
            <!-- /. ROW  -->
            <div class="panel panel-default">

                <div class="panel panel-danger">
                    <div class="panel-heading">
                       Düzenleme Formu
                    </div>
                    <div class="panel-body">

                        <form role="form" method="post">

                            <div class="form-group">
                                <label>Adı Soyadı</label>
                                <input class="form-control" type="text"  name="user[name]" value="{{ user.name }}" placeholder="Adı Soyadı">

                            </div>

                            <div class="form-group">
                                <label>Email</label>
                                <input class="form-control" type="email"  name="user[email]" value="{{ user.email }}" placeholder="Email">

                            </div>

                            <div class="form-group">
                                <label>Password</label>
                                <input class="form-control" type="password"  name="user[password]" value="{{ user.password }}" placeholder="Password">
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                <input class="form-control" type="adress"  name="user[address]" placeholder="address" value="{{ user.address }}">

                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                <input class="form-control" type="phone"  name="user[phone]" placeholder="phone" value="{{ user.phone }}" >

                            </div>
                            <div class="form-group">
                                <label>City</label>
                                <input class="form-control" type="city"  name="user[city]" placeholder="city" value="{{ user.city }}" >

                            </div>

                            <div class="form-group" >
                                <label>Türü</label>
                               <select class="form-control"  name="user[roles]">
                                   {% for item in user.roles %}
                                        <option selected>{{ item }}</option>
                                   {% endfor %}
                                   <option>ROLE_ADMIN</option>
                                   <option>ROLE_USER</option>
                                   <option>ROLE_MEMBER</option>

                               </select>
                            </div>

                            <div class="form-group">
                                <label>Aktif Durumu</label>
                                <select class="form-control"  name="user[status]">
                                    <option>{{ user.status }}</option>
                                    <option>True</option>
                                    <option>False</option>

                                </select>
                            </div>

                            <button type="submit" class="btn btn-danger">KAYDET </button>

                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

    </div>
    <!-- /. PAGE INNER  -->
    </div>
{% endblock %}
