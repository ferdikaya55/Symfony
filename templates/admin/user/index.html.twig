{% extends 'adminbase.html.twig' %}
{% block title %}Üye Listesi {% endblock %}
{% block content %}
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h5 class="page-head-line">Üye Listesi <small><a href="{{ path('admin_user_new') }}" class="btn btn-sm btn-primary" > Üye Ekleme </a></small></h5>
                </div>
            </div>
            <!-- /. ROW  -->
            <div class="panel panel-default">
                <div class="panel-heading">

                        </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <th>Adı Soyadı</th>
                                <th>Email</th>
                                <th>Durum</th>
                                <th>Roller</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                            {% for row in user %}
                            <tr>

                                <td>{{ row.id }}</td>
                                <td>{{ row.name }}</td>
                                <td>{{ row.email }}</td>
                                <td>{{ row.status }}</td>
                                <td> {% for item in row.roles %}
                                        {{ item }}
                                    {% endfor %}
                                </td>
                                <td><a href="{{ path('admin_user_edit',{'id':row.id})}}"class="btn btn-block btn-warning btn-xs">Düzenle</a> </td>
                                <td><a href="{{ path('admin_user_delete',{'id':row.id})}}" onclick="return confirm('Silinecek Emin Misin?');"
                                       class="btn btn-block btn-danger btn-xs">Sil</a> </td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <div class="box-footer  ">
                            <ul class="pagination pagination-mini no-margin pull-right">

                                    <ul class="pagination">
                                        <li><a href="#">«</a></li>
                                        <li><a href="#">1</a></li>
                                        <li><a href="#">2</a></li>
                                        <li><a href="#">3</a></li>
                                        <li><a href="#">4</a></li>
                                        <li><a href="#">5</a></li>
                                        <li><a href="#">»</a></li>
                                    </ul>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /. PAGE INNER  -->
    </div>
{% endblock %}
