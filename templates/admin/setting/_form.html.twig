{{ include('admin/user/messages.html.twig') }}
<form role="form" method="post">

    <div class="panel-body">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#tab_1" data-toggle="tab">Genel Bilgiler</a>
            </li>
            <li class=""><a href="#tab_2" data-toggle="tab">Email Server</a>
            </li>
            <li class=""><a href="#tab_3" data-toggle="tab">Hakkımızda Sayfası</a>
            </li>
            <li class=""><a href="#tab_4" data-toggle="tab">İletişim Sayfası</a>
            </li>
            <li class=""><a href="#tab_5" data-toggle="tab">Referanslar Sayfası</a>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade active in" id="tab_1">

                <div class="form-group">
                    <label>Adı</label>
                    <input class="form-control" type="text"  name="setting[title]" value="{{ setting.title }}" placeholder="Title">

                </div>

                <div class="form-group">
                    <label>Anahtar Kelimeler</label>
                    <input class="form-control" type="text"  name="setting[keywords]" value="{{ setting.keywords }}" placeholder="Keywords">
                </div>

                <div class="form-group">
                    <label>Açıklama</label>
                    <input class="form-control" type="text"  name="setting[description]" value="{{ setting.description }}" placeholder="Description">
                </div>

                <div class="form-group">
                    <label>Firma Adı</label>
                    <input class="form-control" type="text"  name="setting[company]" value="{{ setting.company }}" placeholder="Company">
                </div>

                <div class="form-group">
                    <label>Adresi</label>
                    <input class="form-control" type="text"  name="setting[address]" value="{{ setting.address }}" placeholder="Address">
                </div>

                <div class="form-group">
                    <label>Fax</label>
                    <input class="form-control" type="text"  name="setting[fax]" value="{{ setting.fax }}" placeholder="Fax">
                </div>

                <div class="form-group">
                    <label>Durum</label>
                    <select class="form-control"  name="setting[status]">
                        <option>{{ setting.status }}</option>
                        <option >True</option>
                        <option >False</option>

                    </select>
                </div>
            </div>
            <div class="tab-pane fade" id="tab_2">

                <div class="form-group">
                    <label>Email Server</label>
                    <input class="form-control" type="text"  name="setting[smtpserver]" value="{{ setting.smtpserver }}" placeholder="Email Server">
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input class="form-control" type="email"  name="setting[smtpemail]" value="{{ setting.smtpemail }}" placeholder="Email">
                </div>

                <div class="form-group">
                    <label>Email Şifre</label>
                    <input class="form-control" type="text"  name="setting[smtppasw]" value="{{ setting.smtppasw }}" placeholder="Email Şifre">
                </div>

                <div class="form-group">
                    <label>SMTP Port</label>
                    <input class="form-control" type="text"  name="setting[smtpport]" value="{{ setting.smtpport }}" placeholder="SMTP Port">
                </div>
            </div>
            <div class="tab-pane fade" id="tab_3">

                <div class="form-group">
                    <div class="form-group-sm">
                        <textarea id="aboutus" name="setting[aboutus]">{{ setting.aboutus }} </textarea>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="tab_4">

                <div class="form-group">
                    <div class="form-group-sm">
                        <textarea id="contact" name="setting[contact]">{{ setting.contact }} </textarea>
                    </div>
                </div>
            </div>
                <div class="tab-pane fade" id="tab_5">

                    <div class="form-group">
                        <div class="form-group-sm">
                            <textarea id="referances" name="setting[referances]">{{ setting.referances }} </textarea>
                        </div>
                    </div>
                </div>
        </div>
    </div>





    <div class="btn-small">
        <input type="submit" value="KAYDET" class="btn btn-info">
        <button type="submit"  class="btn btn-info">Geri Dön</button>

    </div>
</form>
<script>
    ClassicEditor
        .create(document.querySelector('#aboutus'))
        .catch(error => {
            console.error(error);
        });
</script>

<script>
    ClassicEditor
        .create(document.querySelector('#contact'))
        .catch(error => {
            console.error(error);
        });
</script>
<script>
    ClassicEditor
        .create(document.querySelector('#referances'))
        .catch(error => {
            console.error(error);
        });
</script>
