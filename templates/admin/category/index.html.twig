{% extends 'adminbase.html.twig' %}
{% block title %}Kategori Listesi {% endblock %}
{% block content %}
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="col-">
                <div class="col-md-12">
                    <h5 class="page-head-line">Kategori Listesi
                        <small><a href="{{ path('admin_category_new') }}" class="btn btn-sm btn-primary"> Yeni Kategori
                                Ekleme </a></small>
                    </h5>
                </div>
            </div>
            <!-- /. ROW  -->
            <div class="panel panel-default">

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Parentid</th>
                                <th>Title</th>
                                <th>Keywords</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Göster</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for category in categories %}
                                <tr>
                                    <td>{{ category.id }}</td>
                                    <td>{{ category.parentid }}</td>
                                    <td>{{ category.title }}</td>
                                    <td>{{ category.keywords }}</td>
                                    <td>{{ category.description }}</td>
                                    <td>{{ category.status }}</td>
                                    <td>
                                        <a href="{{ path('admin_category_show', {'id': category.id}) }}"class="btn btn-info btn-xs">Göster</a>
                                    </td><td>    <a href="{{ path('admin_category_edit', {'id': category.id,'pid':category.parentid}) }}" class="btn btn-warning btn-xs">Düzenle</a>
                                    </td><td> {{ include ('admin/category/_delete_form.html.twig') }}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <a href="{{ path('admin_category_new') }}">Create new</a>
                        <div class="box-footer clearfix">
                            <ul class="pagination pagination-sm no-margin pull-right">

                                <ul class="pagination">
                                    <li><a href="#">«</a></li>
                                    <li><a href="#">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#">4</a></li>
                                    <li><a href="#">5</a></li>
                                    <li><a href="#">»</a></li>
                                </ul>

                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- /. PAGE INNER  -->
    </div>
{% endblock %}
