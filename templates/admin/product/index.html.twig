{% extends 'adminbase.html.twig' %}
{% block title %}Ürün Listesi {% endblock %}
{% block content %}
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="col-">
                <div class="col-md-12">
                    <h5 class="page-head-line">Ürün Listesi
                        <small><a href="{{ path('admin_product_new') }}" class="btn btn-sm btn-primary"> Yeni Ürün
                                Ekleme </a></small>
                    </h5>
                </div>
            </div>
            <!-- /. ROW  -->
            <div class="panel panel-default">

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Title</th>
                                <th>Amount</th>
                                <th>Price</th>
                                <th>Sprice</th>
                                <th>Min</th>
                                <th>Image</th>
                                <th>Gallery</th>
                                <th>Category_id</th>
                                <th>Status</th>
                                <th>Göster</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for product in products %}
                                <tr>
                                    <td>{{ product.id }}</td>
                                    <td>{{ product.title }}</td>
                                    <td>{{ product.amount }}</td>
                                    <td>{{ product.price }}</td>
                                    <td>{{ product.sprice }} </td>
                                    <td>{{ product.min }}</td>
                                    <td>
                                        <a href="javascript:openWin('{{ path('admin_product_iedit', {'id': product.id  }) }}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=600,height=500');">
                                        {% if  product.image == null %}
                                           <img src="{{ url('admin') }}/assets/img/image.png" height="32">
                                        {% else %}
                                            <img src="{{ asset('uploads') }}/images/{{ product.image }}" height="40">

                                        {% endif %}
                                        </a>
                                    </td>
                                    <td>
                                        <a href="javascript:openWin('{{ path('admin_image_new', {'pid': product.id  }) }}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=900,height=700');">
                                        <img src="{{ url('admin') }}/assets/img/gallery.png" height="32">
                                        </a>
                                    </td>
                                    <td>{{ product.categoryId }}</td>
                                    <td>{{ product.status }}</td>
                                    <td>
                                        <a href="{{ path('admin_product_show', {'id': product.id}) }}"
                                           class="btn btn-info btn-xs">Göster</a>
                                    </td>
                                    <td><a href="{{ path('admin_product_edit', {'id': product.id }) }}"
                                           class="btn btn-warning btn-xs">Düzenle</a>
                                    </td>
                                    <td> {{ include ('admin/product/_delete_form.html.twig') }}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="18">no records found</td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>

                        <a href="{{ path('admin_product_new') }}">Create new</a>
                        <div class="box-footer clearfix">
                            <ul class="pagination pagination-sm no-margin pull-right">
                                <ul class="pagination">
                                    <li><a href="#">«</a></li>
                                    <li><a href="#">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#">4</a></li>
                                    <li><a href="#">5</a></li>
                                    <li><a href="#">»</a></li>
                                </ul>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- /. PAGE INNER  -->
    </div>
{% endblock %}
